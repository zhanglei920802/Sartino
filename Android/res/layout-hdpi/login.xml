<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback1"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/luser_table_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_user_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:layout_marginTop="200dip"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/login_user_hdpi"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/edt_user"
                android:layout_width="145dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/login_user_label"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/login_user_label"
                android:alpha="0.8"
                android:background="@drawable/login_text"
                android:gravity="center"
                android:hint="@string/login_user_hint"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/luser_table_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/login_pwd_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_user_label"
                android:layout_marginLeft="60dip"
                android:gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:text="@string/login_pwd_hdpi"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="145dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/login_pwd_label"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/login_pwd_label"
                android:alpha="0.8"
                android:background="@drawable/login_text"
                android:gravity="center"
                android:hint="@string/login_pwd_hint"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/luser_table_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <Button
                android:id="@+id/login_in"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:layout_below="@id/login_pwd_label"
                android:layout_marginLeft="70dip"
                android:padding="0dip"
                android:src="@drawable/login_btn"
                android:text="@string/login_in"
                android:textSize="15sp" />

            <Button
                android:id="@+id/login_register"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:layout_below="@id/edt_pwd"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/login_in"
                android:padding="0dip"
                android:src="@drawable/login_btn"
                android:text="@string/login_register"
                android:textSize="15sp" />
        </RelativeLayout>
    </TableRow>

</TableLayout>