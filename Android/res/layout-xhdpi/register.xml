<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/reg_table_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dip" >

            <TextView
                android:id="@+id/reg_user_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true"
                android:text="@string/reg_user"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reg_edt_user"
                android:layout_width="160dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/reg_user_label"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/reg_user_label"
                android:alpha="0.8"
                android:background="@drawable/login_text"
                android:gravity="center"
                android:hint="@string/reg_user_hint"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/reg_table_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/reg_label_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_user_label"
                android:layout_marginLeft="60dip"
                android:layout_marginTop="4dip"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true"
                android:text="@string/reg_pwd"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reg_edt_pwd"
                android:layout_width="160dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/reg_label_pwd"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/reg_label_pwd"
                android:alpha="0.8"
                android:background="@drawable/login_text"
                android:gravity="center"
                android:hint="@string/reg_pwd_hint"
                android:lines="1"
                android:maxLines="1"
                android:password="true"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/reg_table_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/reg_label_repeat_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_label_pwd"
                android:layout_marginLeft="60dip"
                android:layout_marginTop="4dip"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true"
                android:text="@string/reg_repeat_pwd"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/reg_edt_repeat_pwd"
                android:layout_width="160dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/reg_label_repeat_pwd"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/reg_label_repeat_pwd"
                android:alpha="0.8"
                android:background="@drawable/login_text"
                android:gravity="center"
                android:hint="@string/reg_repeat_pwd_hint"
                android:lines="1"
                android:maxLines="1"
                 android:password="true"
                android:paddingBottom="4dip"
                android:paddingTop="4dip"
                android:singleLine="true" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/reg_table_row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/reg_commit"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dip"
                android:padding="0dip"
                android:src="@drawable/login_btn"
                android:text="@string/reg_commit"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </TableRow>

</TableLayout>